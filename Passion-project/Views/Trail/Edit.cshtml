@model Passion_project.Models.ViewModels.UpdateTrail

@{
    ViewBag.Title = "Edit";
}

<h2>Update Trail</h2>
<form action="/Trail/Update/@Model.SelectedTrail.TrailID" method="POST">
    <div style="display:none;">
        @* Pass through the trail ID *@
        <input type="text" name="TrailID" value="@Model.SelectedTrail.TrailID" />
    </div>
    <div>
        <label>Name:</label> <input type="text" name="TrailName" value="@Model.SelectedTrail.TrailName" />
    </div>
    <div>
        <label>Location ID:</label>
        <select name="LocationID">
            @foreach (var Location in Model.LocationOptions)
            {
                string selected = "";
                if (Location.LocationID == Model.SelectedTrail.LocationID)
                {
                    selected = "selected";
                }
                <option value="@Location.LocationID" @selected>@Location.LocationName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Update Location" />
    </div>
</form>

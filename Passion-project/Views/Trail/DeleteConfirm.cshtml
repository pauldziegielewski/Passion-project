﻿@model Passion_project.Models.TrailDto

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>Are you sure you want to delete this animal?</h2>
<nav>
    <ul>
        <li><a href="/Trail/List">Cancel</a></li>
        <li><a href="/Trail/Edit/@Model.TrailID">Update</a></li>
    </ul>
</nav>
<h3>@Model.TrailName</h3>

<div>Location: @Model.LocationName</div>
<form action="/Trail/Delete/@Model.TrailID" method="POST">
    <input type="submit" value="Confirm Delete" />
</form>